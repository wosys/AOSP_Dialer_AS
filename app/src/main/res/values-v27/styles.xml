        <item name="android:navigationBarColor">?android:attr/colorBackgroundFloating</item>
        <item name="android:navigationBarDividerColor">#E0E0E0</item>
    </style>

    <!-- Used on sdk 27 and above -->
    <!-- TODO(a bug): refactor into dialer/theme -->
